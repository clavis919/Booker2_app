
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image %>
  <% if @user == current_user %>
  <p><%= link_to "User info", edit_user_path(@user) %></p>
  <% end %>
</div>


<% @books.each do |book| %>
<div>
  <%= link_to books_path(book.id) do %>
    <%= image_tag book.get_image %>
  <% end %>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.body %></p>
  <p>name：<%= book.user.name %></p>
</div>
<% end %>